<Page
    x:Class="EmuXS.DirectxPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EmuXS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
        Background="SeaGreen">

    <SwapChainPanel x:Name="swapChainPanel">
        <TextBlock Text="Screen rendering"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="30" />
        <Button x:Name="BackFromScreen" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Top" FontFamily="Segoe MDL2 Assets" Content="&#xf0d5;" Width="50" Height="50" Background="Transparent" Click="BackFromScreen_Click" >
            <Button.RenderTransform>
                <CompositeTransform ScaleX="-1"/>
            </Button.RenderTransform>
        </Button>
    </SwapChainPanel>
</Page>
